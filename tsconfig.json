{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"outDir": "dist",
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true
	},
	"include": ["./src/**/*.ts"],
	"ts-node": {
		"esm": true,
		"transpileOnly": true
	}
}
